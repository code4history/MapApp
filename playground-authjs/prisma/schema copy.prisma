generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String?
  service     String    // OAuthプロバイダー (e.g., "google", "github", etc.)
  email       String?   @unique
  accountName String?   // サイトで使うアカウント名
  sub         String    @unique // OAuthのID
  iat         Int       // トークンの発行時間
  exp         Int       // トークンの有効期限
  jti         String    @unique // トークンの一意の識別子
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
